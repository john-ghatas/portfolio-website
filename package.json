{
  "name": "johnghatas-com",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "npm run sitemap",
    "start": "next start",
    "lint": "next lint",
    "sitemap": "cross-env NODE_OPTIONS='--experimental-json-modules' node ./src/scripts/generateSitemap.mjs",
    "analyze": "cross-env ANALYZE=true next build",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,mdx,css,json}\"",
    "format:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx,mdx,css,json}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@tailwindcss/forms": "^0.5.10",
    "@vercel/analytics": "^1.5.0",
    "formik": "^2.4.6",
    "framer-motion": "^10.18.0",
    "js-yaml": "^4.1.1",
    "lru-cache": "^10.4.3",
    "lucide-react": "^0.366.0",
    "nanoid": "^5.1.6",
    "next": "14.2.33",
    "glob": "10.5.0",
    "next-seo": "^6.8.0",
    "next-themes": "^0.2.1",
    "nodemailer": "^7.0.10",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.12.0",
    "sharp": "^0.32.6",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.33",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20.19.24",
    "@types/nodemailer": "^6.4.21",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "10.4.14",
    "cross-env": "^7.0.3",
    "eslint": "8.42.0",
    "eslint-config-next": "13.4.4",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "globby": "^14.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "micromatch": "4.0.8",
    "postcss": "8.5.6",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "tailwindcss": "3.3.0",
    "typescript": "5.1.3"
  },
  "pnpm": {
    "overrides": {
      "micromatch": "4.0.8"
    },
    "ignoredBuiltDependencies": [
      "sharp",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  }
}
