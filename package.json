{
  "name": "johnghatas-com",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "postbuild": "npm run sitemap",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "sitemap": "cross-env NODE_OPTIONS='--experimental-json-modules' node ./src/scripts/generateSitemap.mjs",
    "analyze": "cross-env ANALYZE=true next build",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,mdx,css,json}\"",
    "format:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx,mdx,css,json}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@tailwindcss/forms": "^0.5.10",
    "@vercel/analytics": "^1.5.0",
    "formik": "^2.4.6",
    "framer-motion": "^12.23.26",
    "glob": "10.5.0",
    "js-yaml": "^4.1.1",
    "lru-cache": "^10.4.3",
    "lucide-react": "^0.562.0",
    "nanoid": "^5.1.6",
    "next": "16.1.6",
    "next-seo": "^6.8.0",
    "next-themes": "^0.2.1",
    "nodemailer": "^7.0.11",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^4.12.0",
    "sharp": "^0.32.6",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@next/bundle-analyzer": "^14.2.33",
    "@next/eslint-plugin-next": "^16.1.0",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20.19.24",
    "@types/nodemailer": "^6.4.21",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "10.4.14",
    "cross-env": "^7.0.3",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globby": "^14.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "micromatch": "4.0.8",
    "postcss": "8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "3.3.0",
    "typescript": "5.1.3"
  },
  "pnpm": {
    "overrides": {
      "micromatch": "4.0.8",
      "lodash-es@>=4.0.0 <=4.17.22": ">=4.17.23",
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23",
      "fast-xml-parser@>=4.3.6 <=5.3.3": ">=5.3.4"
    },
    "ignoredBuiltDependencies": [
      "sharp",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  }
}
